        "parameters": [
          {
            "name": "email",
            "description": "Email do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "description": "Senha do usuário",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário logado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
