{
  "openapi": "3.0.0",
  "info": {
    "title": "Clínica M4",
    "description": "API tem como objetivo cadastro de usuários pacientes e médicos, criação de laudos clinicos de acordo com a especialidade, manipulação e entrega de resultados conforme solicitados.",
    "contact": {
      "email": "clinicam4@clinic.com.br"
    },
    "version": "Versão 1.0.0"
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Paciente"],
        "summary": "Criação de novo usuário - Paciente",
        "description": "Insira todos os parâmetros solicitados para cadastrar um novo usuário - paciente.",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "name",
            "description": "Nome do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "email",
            "description": "Email do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "description": "Senha do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "cpf",
            "description": "CPF do usuário - somente números, sem caracters",
            "required": true,
            "type": "string"
          },
          {
            "name": "isAdm",
            "description": "Usuário é administrador?",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/newUser"
                }
              }
            }
          },
          "400": {
            "description": "Dados com parâmetros invalidos!"
          },
          "409": {
            "description": "Usuário já possui cadastro!"
          }
        }
      },
      "get": {
        "tags": ["Paciente"],
        "summary": "Listagem de todos os usuários - Pacientes",
        "description": "Necessário validação de permissões!"
      }
    },
    "/users/login": {
      "post": {
        "tags": ["Paciente"],
        "summary": "Login do usuário",
        "description": "Insira todos os parâmetros solicitados para realizar o login do usuário",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "email",
            "description": "Email do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "description": "Senha do usuário",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário logado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/token"
                }
              }
            }
          }
        }
      }
    },
    "/users/id": {
      "patch": {
        "tags": ["Paciente"],
        "summary": "Editar dados do usuário por ID",
        "description": "Insira todos os parâmetros solicitados para editar dados do usuário"
      },
      "delete": {
        "tags": ["Paciente"],
        "summary": "Deletar usuário por ID",
        "description": "Necessário validação de permissões!"
      }
    },
    "/doctor": {
      "post": {
        "tags": ["Médico"],
        "summary": "Criação de novo usuário - Médico",
        "description": "Insira todos os parâmetros solicitados para cadastrar um novo usuário - Médico.",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "name",
            "description": "Nome do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "email",
            "description": "Email do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "description": "Senha do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "CRM",
            "description": "CRM do usuário - somente números, sem caracters",
            "required": true,
            "type": "string"
          },
          {
            "name": "isAdm",
            "description": "Usuário é administrador?",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/newDoctor"
                }
              }
            }
          },
          "400": {
            "description": "Dados com parâmetros invalidos!"
          },
          "409": {
            "description": "Usuário já possui cadastro!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "parameters": {
                    "message": "string"
                  }
                },
                "examples": {
                  "error": {
                    "value": {
                      "message": "This email is already in use"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Médico"],
        "summary": "Criação de novo usuário - Médico",
        "description": "Insira todos os parâmetros solicitados para cadastrar um novo usuário - Médico."
      }
    },
    "/doctor/login": {
      "post": {
        "tags": ["Médico"],
        "summary": "Listagem de todos os usuários - Médicos",
        "description": "Necessário validação de permissões!"
      }
    }
  },
  "components": {
    "schemas": {
      "newUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "cpf": {
            "type": "string"
          },
          "isAdm": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          },

          "isActive": {
            "type": "boolean"
          }
        }
      },
      "token": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "newDoctor": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "crm": {
            "type": "string"
          },
          "isAdm": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          },

          "isActive": {
            "type": "boolean"
          }
        }
      },
      "errorMessage": {
        "type": "object",
        "properties": {
          "message": "string"
        }
      }
    }
  }
}
