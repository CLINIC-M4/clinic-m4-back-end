{
  "openapi": "3.0.0",
  "info": {
    "title": "Clínica M4",
    "description": "API tem como objetivo cadastro de usuários pacientes e médicos, criação de laudos clinicos de acordo com a especialidade, manipulação e entrega de resultados conforme solicitados.",
    "contact": {
      "email": "clinicam4@clinic.com.br"
    },
    "version": "Versão 1.0.0"
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Paciente"],
        "summary": "Criação de novo usuário - Paciente",
        "description": "Insira todos os parâmetros solicitados para cadastrar um novo usuário - paciente.",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "name",
            "description": "Nome do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "email",
            "description": "Email do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "description": "Senha do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "cpf",
            "description": "CPF do usuário - somente números, sem caracters",
            "required": true,
            "type": "string"
          },
          {
            "name": "isAdm",
            "description": "Usuário é administrador?",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "cpf": {
                      "type": "string"
                    },
                    "isAdm": {
                      "type": "boolean"
                    },
                    "createdAt": {
                      "type": "string"
                    },
                    "updatedAt": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string"
                    },
                    "isActive": {
                      "type": "boolean"
                    }
                  }
                },
                "examples": {
                  "users": {
                    "value": {
                      "name": "Maria Almeida Silva",
                      "email": "maria@email.com.br",
                      "cpf": "999.999.999-00",
                      "isAdm": "true or false",
                      "createdAt": "2022-11-04T23:00:54.938Z",
                      "updatedAt": "2022-11-04T23:00:54.938Z",
                      "id": "18c008c8-590c-4721-8a97-056733d62954",
                      "isActive": "true or false"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dados com parâmetros invalidos!"
          },
          "409": {
            "description": "Usuário já possui cadastro!"
          }
        }
      },
      "get": {
        "tags": ["Paciente"],
        "summary": "Listagem de todos os usuários - Pacientes",
        "description": "Necessário validação de permissões!"
      }
    },
