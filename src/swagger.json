      "post": {
        "tags": ["Paciente"],
        "summary": "Criação de novo usuário - Paciente",
        "description": "Insira todos os parâmetros solicitados para cadastrar um novo usuário - paciente.",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "name",
            "description": "Nome do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "email",
            "description": "Email do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "description": "Senha do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "cpf",
            "description": "CPF do usuário - somente números, sem caracters",
            "required": true,
            "type": "string"
          },
          {
            "name": "isAdm",
            "description": "Usuário é administrador?",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/newUser"
                }
              }
            }
          },
          "400": {
            "description": "Dados com parâmetros invalidos!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "parameters": {
                    "message": "string"
                  }
                },
                "examples": {
                  "error": {
                    "value": {
                      "message": "Name is required field!"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Usuário já possui cadastro!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "parameters": {
                    "message": "string"
                  }
                },
                "examples": {
                  "error": {
                    "value": {
                      "message": "This email is already in use"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Paciente"],
        "summary": "Listagem de todos os usuários - Pacientes",
        "description": "Necessário validação de permissões!",
        "responses": {
          "200": {
            "description": "Retorna um array de objetos com todos os usuários cadastrados!"
          },
          "401": {
            "description": "Usuário sem autenticação!",
